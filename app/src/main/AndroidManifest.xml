<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.moumen.pharmazione">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MedDwak.DayNight">

        <!-- android:name=".utils.MyFirebaseMessagingService" -->
        <service
            android:name="com.google.firebase.messaging.FirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/logo" />
        <!-- Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <service
            android:name="com.moumen.pharmazione.utils.MyFirebaseMessaginService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>


        <activity
            android:name="com.moumen.pharmazione.BottomNavigation"
            android:label="@string/title_activity_bottom_navigation" />
        <activity
            android:name="com.moumen.pharmazione.BottomNav2Show"
            android:label="Show" />
        <activity
            android:name="com.moumen.pharmazione.ui.poster.ValidatePhone"
            android:parentActivityName="com.moumen.pharmazione.ui.poster.PosterActivity"
            android:theme="@style/Theme.MedDwak.DayNight" />
        <activity
            android:name="com.moumen.pharmazione.SearchableActivity"
            android:parentActivityName="com.moumen.pharmazione.BottomNavigation"
            android:theme="@style/Theme.MedDwak.DayNight">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.moumen.pharmazione.SearchableMedecinActivity"
            android:parentActivityName="com.moumen.pharmazione.ui.poster.PosterActivity"
            android:theme="@style/Theme.MedDwak.DayNight">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.moumen.pharmazione.ProfileNotifActivity"
            android:parentActivityName="com.moumen.pharmazione.BottomNavigation"
            android:theme="@style/Theme.MedDwak.DayNight" >
            <intent-filter>
                <action android:name="ProfileNotifActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.moumen.pharmazione.IntroActivity"
            android:theme="@style/Theme.MedDwak.DayNight" />
        <activity
            android:name="com.moumen.pharmazione.SplashScreen"
            android:theme="@style/AppThemeSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>
        <activity
            android:name="com.moumen.pharmazione.ui.poster.PosterActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:parentActivityName="com.moumen.pharmazione.BottomNavigation"/> <!-- <meta-data -->
        <!-- android:name="com.google.android.geo.API_KEY" -->
        <!-- android:value="AIzaSyDyHgN3_5qTd0w4Gp7ldiLuiSC7DoNAaxY" /> -->

        <!--
 Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more.
        -->


        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.moumen.pdfscanner.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_path" />
        </provider>
    </application>

</manifest>