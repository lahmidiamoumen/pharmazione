<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.pharmazione.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >

        <action app:destination="@id/showFragment"
            android:id="@+id/action_navigation_home_to_showFragment"/>

        <action
            android:id="@+id/action_navigation_home_to_specialityFrag"
            app:destination="@id/specialityFrag" />
    </fragment>

    <fragment
        android:id="@+id/specialityFrag"
        android:name="com.example.pharmazione.ui.speciality.SpecialityFragment"
        android:label="SpecialityFragment">
        <action
            android:id="@+id/action_specialityFrag_to_doctorsFragment"
            app:destination="@id/doctorsFrag" />
    </fragment>

    <fragment
        android:id="@+id/doctorsFrag"
        android:name="com.example.pharmazione.ui.doctors.DoctorsFragment"
        android:label="DoctorsFragment">
        <action
            android:id="@+id/action_doctorsFrag_to_doctorsShowFrag"
            app:destination="@id/doctorsShowFrag" />
    </fragment>

    <fragment
        android:id="@+id/doctorsShowFrag"
        android:name="com.example.pharmazione.ui.doctors.ShowDoctorFragment"
        android:label="ShowDoctorsFragment"/>


    <fragment
        android:id="@+id/showFragment"
        android:name="com.example.pharmazione.ui.home.ShowFragment"
        android:label="ShowFragment"/>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.pharmazione.ui.profile.ProfileFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_notifications_to_showFragment"
            app:destination="@id/showFragment" />
    </fragment>
</navigation>